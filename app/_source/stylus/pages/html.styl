//
// Scaffolding
// --------------------------------------------------

*
  box-sizing border-box

  &:before,
  &:after
    box-sizing border-box



html
    font-family $font-primary
    color $color-gray
    letter-spacing -1px
    min-width 320px
    font-size 16px

body
    width 100%
    height 100%
    overflow-x hidden
    set-font-size(22px)
    color $color-beige
 
.sr-only
    position absolute
    top -50px

.site
    // width 94%
    // margin 3%
    width 94%
    margin 0 auto
    max-width 730px
