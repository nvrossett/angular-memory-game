.atom-card-item
    col(1/5, cycle: 5)
    margin-bottom 15px
    position relative
    height 150px

.atom-card-container
    width 120px
    height 150px
    perspective 1000
    transform-style preserve-3d

    $center('full')
    &.active
    &.complete
        .atom-card-front
            transform rotateY(0deg) !important
        .atom-card-back
            transform rotateY(180deg) !important

.atom-card-flipper
    // width 100%
    // height 100%
    transition 1s
	transform-style preserve-3d
	position relative

.atom-card-front, .atom-card-back
    backface-visibility hidden
    transition 0.6s
    transform-style preserve-3d
    position absolute
    top 0
    left 0

.atom-card-front
    @extend $placeholder-card-color
    @extend $placeholder-card-model
    border-radius 10px
    width 120px
    height 150px
    transform rotateY(-180deg)

.atom-card-back
    @extend $placeholder-card-model
    background url('../img/back-card.png') center center no-repeat
    width 120px
    height 150px
    z-index 2
    transform rotateY(0deg)
